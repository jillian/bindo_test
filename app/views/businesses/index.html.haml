.row
  .col-md-9
    %h2 Scraped Businesses
    #table-responsive
      %table{class: 'table table-striped table-hover', name: "t"}
        %tbody
          %tr
            %th Name
            %th Image
            %th Category
            %th Latitude
            %th Longitude
            %th Zipcode
            %th Address
            %th City
          - @businesses.each do |business|
            %tr
              %td= business.name 
              %td= business.image 
              %td= business.category 
              %td= business.latitude 
              %td= business.longitude 
              %td= business.zipcode 
              %td= business.address 
              %td= business.city 
              %td= link_to 'Show', business
              %td= link_to 'Delete', business, :method => :delete, :data => { :confirm => 'Are you sure?' } 

