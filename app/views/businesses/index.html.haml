.container
  .sixteen.columns
    %h1.remove-bottom{:style => "margin-top: 40px"} Scraping Yelp
    %h5 Looking at LA
    #table-responsive
      %table{class: 'table table-striped table-hover', name: "t"}
        %tbody
          %tr
            %th Name
            %th Image
            %th Category
            %th Latitude
            %th Longitude
            %th Zipcode
            %th Address
            %th City
          - @businesses.each do |business|
            %tr
              %td= business.name 
              %td= business.image 
              %td= business.category 
              %td= business.latitude 
              %td= business.longitude 
              %td= business.zipcode 
              %td= business.address 
              %td= business.city 
              %td= link_to 'Show', business
              %td= link_to 'Delete', business, :method => :delete, :data => { :confirm => 'Are you sure?' } 

