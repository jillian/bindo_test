<h1>Listing businesses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Category</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Zipcode</th>
      <th>Address</th>
      <th>City</th>
      <th>Data key</th>
      <th>Integer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.name %></td>
        <td><%= business.image %></td>
        <td><%= business.category %></td>
        <td><%= business.latitude %></td>
        <td><%= business.longitude %></td>
        <td><%= business.zipcode %></td>
        <td><%= business.address %></td>
        <td><%= business.city %></td>
        <td><%= business.data_key_id %></td>
        <td><%= business.integer %></td>
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

